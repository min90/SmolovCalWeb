</br>
<div class="container">
</br>
	<div class="row">
		<div class="col-md-9">
			<h3>Cycles</h3>
		</div>
		<div class="col-md-3">
			<%= link_to 'Create a new cycle', new_workout_path, class: 'btn btn-outline-primary' %>
		</div>
	</div>
</br>
	<div class="row">
		<div class="col-md-12">
			<% if @workouts.any? %>
			<table class="table table-hover">
  				<thead>
    				<tr>
      					<th>#</th>
      					<th>Name</th>
      					<th>Jr/Sr</th>
      					<th>Max</th>
      					<th>Increase</th>
      					<th>Progress</th>
      					<th></th>
    				</tr>
 				</thead>
  				<tbody>
  					<% @workouts.each_with_index do |workout, index| %>
    				<tr class="workout-row" data-link="<%= workout_path(workout) %>">
      					<td scope="row"><%= index + 1 %></td>
      					<td><%= workout.name %></td>
      					<td><%= workout.format_cycle_selection %></td>
      					<td><%= workout.max %></td>
      					<td><%= workout.increase %></td>
      					<td>12%</td>
      					<td class="no-clickable"><%= link_to workout_path(workout), method: :delete, data: {confirm: 'Are you sure would like to delete the cycle?'}, title: 'Delete cycle', class: 'btn btn-outline-info btn-sm' do %>
						<span class="fa fa-trash"></span>
						<% end %>
    				</tr>
    				<% end %>
  				</tbody>
			</table>
			<% else %>
				<p> You dont have no cycles at the moment hurry go create one! </p>
			<% end %>
		</div>
	</div>
</div>